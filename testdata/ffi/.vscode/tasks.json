{
  "version": "2.0.0",
  "tasks": [
    {
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      },
      "type": "process",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        "$tsc"
      ],
      "label": "Lint",
      "group": {
        "kind": "none",
        "isDefault": false
      },
      "command": "buster",
      "args": [
        "lint"
      ]
    },
    {
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      },
      "type": "process",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        "$tsc"
      ],
      "label": "Run",
      "group": {
        "kind": "none",
        "isDefault": true
      },
      "command": "buster",
      "args": [
        "run",
        "./src/main.ts"
      ]
    }
  ]
}